{
  "name": "@kkt/ssr",
  "private": true,
  "license": "MIT",
  "scripts": {
    "pkg:watch:types": "lerna exec \"tsbb types --watch\" --scope @kkt/webpack-plugin-*",
    "pkg:watch:ts": "lerna exec tsbb watch --scope @kkt/webpack-plugin-*",
    "pkg:build:types": "lerna exec tsbb types --scope @kkt/webpack-plugin-*",
    "pkg:build:ts": "lerna exec \"tsbb build --source-maps none\" --scope @kkt/webpack-plugin-*",
    "pkg:build": "npm run pkg:build:ts && npm run pkg:build:types",
    "ssr:watch:types": "lerna exec \"tsbb types --watch\" --scope @kkt/ssr",
    "ssr:watch:ts": "lerna exec tsbb watch --scope @kkt/ssr",
    "ssr:build:types": "lerna exec tsbb types --scope @kkt/ssr",
    "ssr:build:ts": "lerna exec \"tsbb build --source-maps none\" --scope @kkt/ssr",
    "ssr:build": "npm run ssr:build:ts && npm run ssr:build:types",
    "watch:ssr": "npm run ssr:watch:ts & npm run ssr:watch:types",
    "watch:pkg": "npm run pkg:watch:ts & npm run pkg:watch:types",
    "build": "npm run pkg:build && npm run ssr:build",
    "hoist": "lerna bootstrap --hoist",
    "clean": "lerna clean --yes",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "version": "lerna version --no-changelog --no-git-tag-version --no-push --yes",
    "publish": "lerna publish from-package",
    "tsbb": "tsbb"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,less,md,json}": [
      "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\""
    ]
  },
  "dependencies": {
    "husky": "4.3.7",
    "kkt": "6.3.0",
    "lerna": "3.22.1",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1",
    "tsbb": "2.0.5"
  },
  "workspaces": [
    "packages/ssr"
  ]
}
